<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gamecentre.cardmatching.MatchingStartingActivity"
    android:background="@drawable/backgound2">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Welcome To Card Matching Memory Game"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/MatchingGameStartButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="New Game" />

    <Button
        android:id="@+id/MatchingGameLoadButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="-127dp"
        android:layout_toStartOf="@+id/MatchingGameStartButton"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Load Saved Game" />

    <Button
        android:id="@+id/MatchingGameSaveButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="-98dp"
        android:layout_marginTop="151dp"
        android:layout_toEndOf="@+id/MatchingGameStartButton"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Save Game" />

    <Button
        android:id="@+id/ScoreboardButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Scoreboard" />


</RelativeLayout>